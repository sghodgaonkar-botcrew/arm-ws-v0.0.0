{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "label": "build mc_tester",
            "type": "shell",
            "command": "g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                // "-pg",
                // "-Og",
                "./src/mc_tester.cpp",
                "./src/motor_controller.cpp",
                "-std=c++17",
                "-I./build/_deps/moteus-src/lib/cpp/mjbots/moteus",
                "-I./include",
                "-o",
                "./build/mc_tester"
            ],
            "options": {
                "cwd": "${workspaceFolder}/dds_bridge/cpp_plugins"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "label": "build ik_solver_sub",
            "type": "shell",
            "command": "g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "./src/ik_solver_sub.cpp",
                "./src/motor_controller.cpp",
                "-std=c++17",
                "-I./build/_deps/moteus-src/lib/cpp/mjbots/moteus",
                "-I./include",
                "-I./build/generated",
                "-I/home/shanto/dds-install",
                "-I/home/shanto/dds-cxx-install",
                "-o",
                "./built/ik_solver_sub",
                "--verbose"
            ],
            "options": {
                "cwd": "${workspaceFolder}/dds_bridge/cpp_plugins"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "label": "CMake Configure",
            "type": "shell",
            "options": {
                "env": {
                    "CYCLONE_INSTALL": "/home/shanto/cyclonedds-cxx"
                }
            },
            "command": "cmake",
            "args": [
                "-S",
                "${workspaceFolder}/dds_bridge/cpp_plugins",
                "-B",
                "${workspaceFolder}/dds_bridge/cpp_plugins/build"
            ],
            "problemMatcher": []
        },
        {
            "label": "CMake Build",
            "type": "shell",
            "dependsOn": "CMake Configure",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/dds_bridge/cpp_plugins/build"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}